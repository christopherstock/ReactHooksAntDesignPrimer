{
    "extends": [
        "tslint:recommended"
    ],
    "defaultSeverity": "warning",
    "rules": {
        "arrow-parens": false,
        "ban-comma-operator": true,
        "completed-docs": [
            true,
            {
                "methods": {    "locations": [ "all" ], "privacies": [ "all" ] },
                "properties": { "locations": [ "all" ], "privacies": [ "all" ] },
                "classes": {    "locations": [ "all" ], "privacies": [ "all" ] },
                "enums": {      "locations": [ "all" ], "privacies": [ "all" ] },
                "functions": {  "locations": [ "all" ], "privacies": [ "all" ] },
                "interfaces": { "locations": [ "all" ], "privacies": [ "all" ] },
                "namespaces": { "locations": [ "all" ], "privacies": [ "all" ] },
                "types": {      "locations": [ "all" ], "privacies": [ "all" ] },
                "variables": {  "locations": [ "all" ], "privacies": [ "all" ] }
            }
        ],
        "curly": false,
        "import-spacing": false,
        "indent": [ true, "spaces" ],
        "interface-name": [ true, "never-prefix" ],
        "jsdoc-format": false,
        "max-line-length": [ true, 120 ],
        "member-access": false,
        "member-ordering": [ true, { "order": "instance-sandwich" } ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": [true],
        "no-console": true,
        "no-empty": false,
        "no-empty-interface": true,
        "no-irregular-whitespace": false,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "no-var-requires": false,
        "object-literal-key-quotes": false,
        "object-literal-sort-keys": false,
        "object-literal-shorthand": false,
        "ordered-imports": false,
        "one-line": false,
        "prefer-conditional-expression": false,
        "quotemark": [ true, "single", "jsx-double" ],
        "semicolon": [ false ],
        "space-before-function-paren": false,
        "switch-default": false,
        "trailing-comma": [ false ],
        "typedef": [
            true,
            "call-signature",
            "arrow-call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "variable-declaration",
            "member-variable-declaration",
            "object-destructuring",
            "array-destructuring"
        ],
        "typedef-whitespace": true,
        "whitespace": [
            true,
            "check-branch",
            "check-module",
            "check-separator",
            "check-preblock"
        ]
    }
}
